<!DOCTYPE HTML>
<html>
    <head>
        <title>{{$.Person.Name}}'s Entries</title>
        {{ template "header" }}
    </head>
    <body>
        {{template "navbar" $}}
        <div class="container">
            <h1>{{$.Person.Name}}</h1>
            <h2>{{$.Person.Nickname}}</h2>
            {{ range $i, $e := $.Entries }}
                <a href="/trip?trip_id={{$e.TripId}}">
                    <h3>{{$e.StartString}} - {{$e.EndString}}</h3>
                    <h4>{{$e.TripReason}}</h4>
                </a>
                <p>{{$e.Entry}}</p>
            {{ end }}
        </div>
    </body>
</html>
